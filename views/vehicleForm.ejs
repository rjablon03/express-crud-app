<%
    if (vehicle.id) {
        btnLabel = "Update"
        route = `/vehicles/${vehicle.id}`
        cityMPG = vehicle.mpg.city
        highwayMPG = vehicle.mpg.highway
    } else {
        btnLabel = 'Submit'
        route = '/vehicles'
        cityMPG = ''
        highwayMPG = ''
    }
%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Vehicle</title>
</head>
<body>
    <form action="<%=route%>" method="post">
        <label for="model">Make:</label>
        <input type="text" name="make" id="name" value="<%=vehicle.make%>" required>

        <label for="model">Model:</label>
        <input type="text" name="model" id="model" value="<%=vehicle.model%>" required>

        <label for="year">Year:</label>
        <input type="number" name="year" id="year" value="<%=vehicle.year%>" required>

        <label for="bodyStyle">Body Style:</label>
        <select name="bodyStyle" id="bodyStyle" required>
            <option value="">--Please choose an option--</option>
            <option value="SEDAN">Sedan</option>
            <option value="SUV">SUV</option>
            <option value="TRUCK">Truck</option>
          </select> 

        <label for="mileage">Mileage:</label>
        <input type="text" name="mileage" id="mileage" value="<%=vehicle.mileage%>" required>

        <label for="city">City MPG:</label>
        <input type="number" name="city" id="city" value="<%=cityMPG%>" required>

        <label for="highway">Highway MPG:</label>
        <input type="number" name="highway" id="highway" value="<%=highwayMPG%>" required>

        <input type="submit" value="<%=btnLabel%>"/>
    </form>

    <a href="/vehicles/<%=vehicle.id%>">Back</a>
</body>
</html>